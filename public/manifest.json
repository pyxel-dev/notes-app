{
  "manifest_version": 2,
  "name": "Notes App",
  "version": "1.0.0",
  "description": "A simple notes app for Chrome, with Markdown support",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Notes App",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ]
}